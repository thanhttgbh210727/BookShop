<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 400px;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 5px;
            background: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;
}

<div class="login-container">
    <h2>Sign In</h2>
    <form asp-action="Login">
        <div class="form-group">
            <label class="control-label">Username</label>
            <input name="na" class="form-control" />
        </div>
        <div class="form-group">
            <label for="pa" class="control-label">Password</label>
            <input name="pa" type="password" class="form-control" />
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Login" class="btn btn-primary btn-block" />
        </div>
    </form>
    <div class="text-center">
        <p><b>If you don't have an account</b></p>
    </div>
    <div class="btn-group">
        <a class="btn btn-success" asp-action="Create">Create Account</a>
    </div>
</div>
